# Production Backend Environment Configuration
# Copy this file to backend/.env.prod and update with your production values

# Application Configuration
APP_NAME=PlaybookWiz API
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=false

# Database Configuration
DATABASE_URL=postgresql://playbookwiz:your-secure-postgres-password@postgres:5432/playbookwiz
MONGODB_URL=mongodb://playbookwiz:your-secure-mongo-password@mongodb:27017/playbookwiz
REDIS_URL=redis://redis:6379

# Authentication & Security
SECRET_KEY=your-super-secret-key-here-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# AI/ML Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# Vector Database
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX_NAME=playbookwiz-embeddings

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=104857600  # 100MB in bytes
ALLOWED_EXTENSIONS=pdf,ppt,pptx,doc,docx

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=noreply@yourdomain.com
EMAILS_FROM_NAME=PlaybookWiz

# Celery Configuration (for background tasks)
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600  # 1 hour in seconds

# CORS Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring
SENTRY_DSN=your-sentry-dsn-here

# Selenium Configuration (for web scraping)
SELENIUM_DRIVER_PATH=/usr/local/bin/chromedriver
SELENIUM_HEADLESS=true

# spaCy Model
SPACY_MODEL=en_core_web_sm

# Cache Configuration
CACHE_TTL=3600  # 1 hour in seconds

# API Keys for external services
GOOGLE_API_KEY=your-google-api-key-here
SERP_API_KEY=your-serp-api-key-here

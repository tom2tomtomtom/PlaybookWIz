{
  "name": "playbookwiz",
  "version": "1.0.0",
  "description": "Brand Playbook Intelligence App",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "build": "cd frontend && npm run build",
    "start": "cd frontend && npm start",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && pytest",
    "test:coverage": "npm run test:frontend -- --coverage && cd backend && pytest --cov=app --cov-report=html",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && flake8 .",
    "format": "npm run format:frontend && npm run format:backend",
    "format:frontend": "cd frontend && npm run format",
    "format:backend": "cd backend && black .",
    "setup": "npm run setup:frontend && npm run setup:backend",
    "setup:frontend": "cd frontend && npm install",
    "setup:backend": "cd backend && pip install -r requirements.txt",
    "docker:dev": "docker-compose up --build",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up --build -d",
    "docker:monitoring": "cd monitoring && docker-compose -f docker-compose.monitoring.yml up -d",
    "deploy:prod": "chmod +x scripts/deploy-production.sh && ./scripts/deploy-production.sh",
    "validate:prod": "chmod +x scripts/validate-production.sh && ./scripts/validate-production.sh",
    "health:check": "./scripts/validate-production.sh backend",
    "db:migrate": "cd backend && alembic upgrade head",
    "db:reset": "cd backend && alembic downgrade base && alembic upgrade head"
  },
  "keywords": [
    "brand",
    "playbook",
    "ai",
    "intelligence",
    "marketing",
    "creative",
    "analysis"
  ],
  "author": "PlaybookWiz Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "jest": "^29.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
